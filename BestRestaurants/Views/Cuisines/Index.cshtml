@{
    Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>
    @if(@Model.Count == 0)
    {
        <p>There are no cuisines to see </p>
    }

</h1>

<ul>
    @foreach(Cuisine cuisine in Model)
    {
        <li>@Html.ActionLink($"{cuisine.CuisineType}", "Details", new { id = cuisine.CuisineId}) | @cuisine.Restaurant.Name</li>
    }

</ul>


<p>@Html.ActionLink("Add A Cuisine", "Create", "Cuisines")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
