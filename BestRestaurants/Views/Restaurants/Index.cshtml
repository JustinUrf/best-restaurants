@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>
    @if(@Model.Count == 0)
    {
        <p>There are no Restaurants to see </p>
    }

</h1>


<ul>
    @foreach(Restaurant restaurant in Model)
    {
        <li>@Html.ActionLink($"{restaurant.Name}", "Description",new { id = restaurant.RestaurantId})</li>
    }

</ul>